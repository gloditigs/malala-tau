{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { 
      "src": "/wp-content/(.*)", 
      "dest": "/public/wp-content/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    { "src": "/(.*)", "dest": "api/index.js" }
  ]
}